{
  "compilerOptions": {
    "declaration": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false
  },
  "exclude": [
    "dist",
    "node_modules",
    "main.ts",
    "spec",
    "typings"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
