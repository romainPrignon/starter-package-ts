{
  "name": "starter-package-ts",
  "version": "1.4.0",
  "description": "module description",
  "author": "Romain Prignon <pro.rprignon@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romainPrignon/starter-package-ts.git"
  },
  "main": "dist/index.js",
  "types": "dist/type/index.d.ts",
  "engines": {
    "node": "^8.0.0",
    "npm": "^5.3.0"
  },
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "build:dev": "tsc --noEmit --pretty",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "tslint --project tsconfig.json",
    "lint:test": "tslint --project test/tsconfig.json",
    "release": "release-it",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "lodash": "latest",
    "rxjs": "latest"
  },
  "devDependencies": {
    "@types/lodash": "latest",
    "husky": "^0.15.0-beta.16",
    "jest": "latest",
    "release-it": "latest",
    "ts-jest": "latest",
    "tslint": "latest",
    "tslint-config-standard": "latest",
    "typescript": "latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build:dev && npm run test"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/test/**/*.(ts|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 100
      }
    }
  }
}
