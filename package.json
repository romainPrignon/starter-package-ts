{
  "name": "starter-package-ts",
  "version": "1.6.0",
  "description": "module description",
  "author": "Romain Prignon <pro.rprignon@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romainPrignon/starter-package-ts.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "^12.0",
    "npm": "^6.12"
  },
  "files": [
    "dist",
    "type",
    "LICENSE",
    "package-lock.json",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint --ext .ts src",
    "compile": "rm -rf dist/ && tsc",
    "test": "undefined",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "version:patch": "npm version patch -m ':bookmark: Release v%s'",
    "version:minor": "npm version minor -m ':bookmark: Release v%s'",
    "version:major": "npm version major -m ':bookmark: Release v%s'",
    "postversion": "git push --follow-tags",
    "prepublish": "npm run compile"
  },
  "dependencies": {
    "lodash": "4"
  },
  "devDependencies": {
    "@types/lodash": "4",
    "@types/node": "12",
    "@typescript-eslint/eslint-plugin": "2",
    "@typescript-eslint/parser": "2",
    "eslint": "6",
    "eslint-config-standard": "14",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "10",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "husky": "3",
    "typescript": "3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run compile && npm run test:coverage"
    }
  }
}
